<h1>圖書館藏書列表</h1>
  <%= link_to "新增書本", new_book_path %>

  <table>
    <thead>
      <tr>
        <td>書名</td>
        <td>作者姓名</td>
        <td>售價</td>
        <td>簡介</td>
        <td>處理</td>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= book.bookname %></td>
        <td><%= book.author %></td>
        <td><%= book.price %></td>
        <td><%= book.introduction %></td>
        <td><%= link_to "編輯", edit_book_path(book) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>